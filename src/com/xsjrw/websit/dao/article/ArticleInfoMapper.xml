<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xsjrw.websit.dao.article.ArticleInfoMapper">
	<resultMap type="ArticleInfo" id="articleInfoResultMap">
		<result property="id" column="id" />
		<result property="title" column="title" />
		<result property="thumbnailUrl" column="thumbnail_url" />
		<result property="content" column="content" />
		<result property="status" column="status" />
		<result property="createTime" column="create_time" />
	</resultMap>
	
	<sql id="table_columns">
		id,
		title,
		thumbnail_url,
		content,
		status,
		create_time
    </sql>
	<sql id="entity_properties">
		#{id},
		#{title},
		#{thumbnailUrl},
		#{content},
		#{status},
		#{createTime}
	</sql>
	
	<!-- 适用于主键自增类型 -->
	<insert id="saveArticleInfo" parameterType="ArticleInfo" useGeneratedKeys="true" keyProperty="id">
		insert into tbl_article_info( <include refid="table_columns" /> ) 
		values ( <include refid="entity_properties" /> )
	</insert>
	
	<!-- 批量添加 适用于主键自增类型  不支持返回主键-->
	<insert id="batchInsert" parameterType="java.util.List" useGeneratedKeys="true">
		insert into tbl_article_info( <include refid="table_columns" /> ) 
		values 
		<foreach item="item" collection="list" separator="," >
			( <include refid="entity_properties" /> )
		</foreach>
	</insert>
	
	<!--根据主键删除 -->
	<delete id="deleteById">
		delete from tbl_users
		where id = #{id}
	</delete>
	
	<!-- 根据ID批量删除 -->
	<delete id="deleteByIds">
		delete from tbl_article_info
		where id in
		<foreach item="item" collection="array" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>
	
	<update id="update" parameterType="ArticleInfo">
		update tbl_article_info 
		<trim prefix="set" suffixOverrides=",">
			<if test="title != null and title != ''">title = #{title},</if>
			<if test="thumbnailUrl != null and thumbnailUrl != ''">thumbnail_url = #{thumbnailUrl},</if>
			<if test="content != null and content != ''">content = #{content},</if>
			<if test="status != null and status != ''">status = #{status},</if>
			<if test="createTime != null and createTime != ''">create_time = #{createTime},</if>
		</trim>
		<where>id = #{id}</where>
	</update>
	
	<select id="findById" resultMap="articleInfoResultMap" parameterType="String" >
		select <include refid="table_columns" />
		from tbl_article_info
		where id = #{id}
	</select>
	
	<select id="queryAll" resultMap="articleInfoResultMap">
		select <include refid="table_columns" /> 
		from tbl_article_info
	</select>
	
	<!-- 使用like用法：columnName like concat('%',#columnName#,'%') -->
	<sql id="page_where">
		<trim prefix="where" prefixOverrides="and | or ">
			<if test="title != null and title != ''">and title = #{title}</if>
			<if test="thumbnailUrl != null and thumbnailUrl != ''">and thumbnail_url = #{thumbnailUrl}</if>
			<if test="content != null and content != ''">and content = #{content}</if>
			<if test="status != null and status != ''">and status = #{status}</if>
			<if test="createTime != null and createTime != ''">and create_time = #{createTime}</if>
		</trim>
	</sql>
	
	<select id="page" resultMap="articleInfoResultMap" parameterType="ArticleInfoSearch">
		select <include refid="table_columns" />
		from tbl_article_info
		<include refid="page_where" />
		limit #{firstIndex},#{pageSize}
	</select>
	
	<select id="pageCount" resultType="int" parameterType="ArticleInfoSearch">
		select count(id) from tbl_article_info
		<include refid="page_where" />
	</select>
	
	<!-- 其他自定义SQL -->
	
</mapper>